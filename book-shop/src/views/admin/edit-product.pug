extends ../components/header.pug

block styles
  link(rel="stylesheet" type="text/css" href="/add-product.css")

block content
  h1 Editing "#{product.title}" Product
  form(method="POST" action="/admin/edit-product")

    label(for="title") Title
    input(id="title" name="title" required autofocus value!=product.title)

    label(for="imageURL") Image URL
    input(id="imageURL" name="imageURL" required value!=product.imageURL)

    label(for="price") Price
    input(id="price" type="number" step="0.01" name="price" required value!=product.price)

    label(for="description") Description
    textarea(id="description" name="description" required rows="3") #{product.description}

    input(type="hidden" name="id" value!=product._id)

    button(type="submit")
      i.fas.fa-check 
        span Finish