extends ../components/header.pug

block styles
  link(rel="stylesheet" type="text/css" href="/product-list.css")

block content
  if products.length > 0
    .prod-list
      each p in products
        article
          h3 #{p.title}
          img(src!=p.imageURL alt!=p.title)
          strong $ #{p.price}
          p #{p.description}
          .btn-group
            form(method="GET" action!='/product/'+p.id)
              button(type="submit")
                i.fas.fa-info-circle
                span Details
            form(method="POST" action="/cart")
              button(type="submit")
                i.fas.fa-cart-plus 
                span Add to Cart
              input(type="hidden" name="productId" value!=p.id)
  else
    h1 #{pageTitle}
    h2 No Products Registered!